@model IEnumerable<Product>

@{ 
    ViewBag.Title = "Product List";
}

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Product" asp-action="Create" class="float-right btn btn-success">Add New Product</a>
    </div>
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Srl</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int srl = 0;
                foreach (var product in Model)
                {
                    srl++;
                        <tr>
                            <td>@srl</td>
                            <td><img src="~/Images/@product.UrlImage" width="50" height="50" alt="not available" /></td>
                            <td>@product.ProductName</td>
                            <td>@product.Price</td>
                            <td>@product.Category.CategoryName</td>
                            <td>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary m-1 w-100">Edit</a>
                            </td>
                            <td>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger m-1 w-100"
                               onclick="return confirm("Are you sure?")"
                               >Delete</a>
                            </td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>