@model Product
@{
    ViewBag.Title = "Edit Product";
}

<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Product Name</label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label>Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.DDL" class="custom-select form-control" >
                <option value="">Select Category</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>Photo</label>
            <input type="file" asp-for="UrlImage" class="form-control" />
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Update Product" class="btn btn-primary form-control mb-2" />
            <a type="button" asp-controller="Product" asp-action="Index" class="btn btn-danger form-control">Cancel</a>
        </div>
    </div>

</form>
